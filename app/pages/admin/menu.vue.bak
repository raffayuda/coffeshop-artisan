              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                <textarea v-model="menuForm.description" rows="3" required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"></textarea>
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                  <select v-model="menuForm.category" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent">
                    <option value="COFFEE">Coffee</option>
                    <option value="NON_COFFEE">Non-Coffee</option>
                    <option value="SNACK">Snack</option>
                  </select>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Price</label>
                  <input v-model.number="menuForm.price" type="number" required min="0"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" />
                </div>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Image URL</label>
                <input v-model="menuForm.image" type="url"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" />
              </div>

              <div class="flex items-center">
                <input v-model="menuForm.isAvailable" type="checkbox" class="w-4 h-4 text-amber-600 rounded" />
                <label class="ml-2 text-sm text-gray-700">Available for order</label>
              </div>

              <div class="flex gap-3 pt-4">
                <button type="submit" :disabled="saving"
                  class="flex-1 bg-amber-600 hover:bg-amber-700 text-white py-3 rounded-lg font-medium transition-colors disabled:opacity-50">
                  {{ saving ? 'Saving...' : (showEditModal ? 'Update' : 'Create') }}
                </button>
                <button type="button" @click="closeModal"
                  class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                  Cancel
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
const { user } = useAuth()
const { createMenu, updateMenu } = useAdmin()
const { products } = useProducts()

// Redirect if not admin
if (user.value?.role !== 'ADMIN') {
  navigateTo('/')
}

const activeCategory = ref('ALL')
const showCreateModal = ref(false)
const showEditModal = ref(false)
const saving = ref(false)
const currentEditId = ref('')

const categories = [
  { label: 'All Items', value: 'ALL' },
  { label: 'Coffee', value: 'COFFEE' },
  { label: 'Non-Coffee', value: 'NON_COFFEE' },
  { label: 'Snacks', value: 'SNACK' }
]

const menuForm = ref({
  name: '',
  description: '',
  category: 'COFFEE',
  price: 0,
  image: '',
  isAvailable: true
})

const menus = ref<any[]>([])

const filteredMenus = computed(() => {
  if (activeCategory.value === 'ALL') {
    return menus.value
  }
  return menus.value.filter((m: any) => m.category === activeCategory.value)
})

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('id-ID').format(price)
}

const editMenu = (item: any) => {
  currentEditId.value = item.id
  menuForm.value = {
    name: item.name,
    description: item.description,
    category: item.category,
    price: item.price,
    image: item.image || '',
    isAvailable: item.isAvailable
  }
  showEditModal.value = true
}

const closeModal = () => {
  showCreateModal.value = false
  showEditModal.value = false
  currentEditId.value = ''
  menuForm.value = {
    name: '',
    description: '',
    category: 'COFFEE',
    price: 0,
    image: '',
    isAvailable: true
  }
}

const saveMenu = async () => {
  saving.value = true

  let result
  if (showEditModal.value) {
    result = await updateMenu(currentEditId.value, menuForm.value)
  } else {
    result = await createMenu(menuForm.value)
  }

  if (result.success) {
    // Refresh menus list
    await fetchMenus()
    closeModal()
  } else {
    alert(result.error)
  }

  saving.value = false
}

const toggleAvailability = async (menuId: string, isAvailable: boolean) => {
  const result = await updateMenu(menuId, { isAvailable })
  if (result.success) {
    await fetchMenus()
  }
}

const fetchMenus = async () => {
  try {
    const response = await $fetch('/api/menu/all')
    menus.value = response.menus || []
  } catch (error) {
    console.error('Failed to fetch menus')
  }
}

onMounted(() => {
  fetchMenus()
})
</script>
