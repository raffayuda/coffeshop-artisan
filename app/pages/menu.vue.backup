<script setup lang="ts">
import { computed, onMounted, ref } from 'vue'
import { useProducts, type Product } from '../composables/useProducts'
import { useCart } from '../composables/useCart'
import { useHead } from 'nuxt/app'

const { products, loading, loadProducts, getProductsByCategory, formatPrice } = useProducts()
const { addToCart } = useCart()

const selectedCategory = ref('all')
const detailModalOpen = ref(false)
const selectedProduct = ref<Product | null>(null)

const filteredProducts = computed(() => {
    return getProductsByCategory(selectedCategory.value)
})

const openDetailModal = (product: Product) => {
    selectedProduct.value = product
    detailModalOpen.value = true
}

watch(detailModalOpen, (isOpen) => {
    if (isOpen) {
        document.body.style.overflow = 'hidden'
    } else {
        document.body.style.overflow = ''
    }
})

const handleAddFromModal = () => {
    if (selectedProduct.value) {
        addToCart({
            id: selectedProduct.value.id,
            name: selectedProduct.value.name,
            price: selectedProduct.value.price,
            image: selectedProduct.value.image
        })
        detailModalOpen.value = false
    }
}

onMounted(() => {
    loadProducts()
})

useHead({
    title: 'Menu - Artisan Coffee',
    meta: [
        { name: 'description', content: 'Browse our full menu of artisan coffee, fresh pastries, and delicious beverages.' }
    ]
})
</script>

